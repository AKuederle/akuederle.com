---
import Base from './Base.astro';

interface Props {
  title: string;
  date: Date;
  tags?: string;
  description?: string;
}

const { title, date, tags, description } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const tagList = tags ? tags.split(' ').filter(Boolean) : [];
---

<Base title={title} description={description}>
  <article>
    <header class="mb-8">
      <p class="font-(family-name:--font-mono) text-sm text-(--color-text-muted) mb-2">{formattedDate}</p>
      <h1 class="font-(family-name:--font-mono) text-2xl md:text-3xl font-bold leading-tight">{title}</h1>
      {tagList.length > 0 && (
        <p class="mt-3 font-(family-name:--font-mono) text-xs text-(--color-text-muted)">
          {tagList.map((tag, i) => (
            <>{i > 0 && <span class="mx-1.5">&middot;</span>}{tag}</>
          ))}
        </p>
      )}
    </header>
    <div class="post-content">
      <slot />
    </div>
  </article>
</Base>
